<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Layouts.StackImage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="10, 20, 0, 0"></OnPlatform>
    </ContentPage.Padding>
    <StackLayout Spacing = "10">
        <Label Text = "nyc_photographer"></Label>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"
         Margin = "-10, 0, 0, 0" ></Image>
        <StackLayout Spacing = "10"
            Orientation = "Horizontal">
            <Label Text="Like" TextColor="#127ac7" FontSize = "12"></Label>
            <Label Text="Comment" TextColor="#127ac7" FontSize = "12"></Label>
            <Label Text="Share" TextColor="#127ac7" FontSize = "12"></Label>
        </StackLayout>
        <BoxView BackgroundColor="#f0f0f0" HeightRequest = "1"></BoxView>
        <Label Text = "700 like" FontSize = "16" FontAttributes = "Bold"></Label>
        <Label Text = "This is a shot yesterday in Skanor, Sweden, when driving home from Denmark."></Label>
    </StackLayout>
</ContentPage>
